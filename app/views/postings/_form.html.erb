<!-- movie_postings_path(@movie) -->
<%= form_tag "", method: :post, id: 'post_form' do %>

  <div class="form-group">
    <%= text_field_tag :date, params[:date], class: "form-control", placeholder: "Date...", id: "show_date", data: { dates: @dates.to_json} %>
  </div>
  <div class="form-group">
    <%= select_tag :theater, options_from_collection_for_select([], "id", "name"), {class: "form-control", id: "show_theater", disabled: true, include_blank: true} %>
  </div>
  <div class="form-group">
    <%= select_tag :time, options_from_collection_for_select([], "id", 'uf_time'), {class: "form-control", id: "show_time", disabled: true, include_blank: true} %>
  </div>
  <%= hidden_field_tag 'show_id' %>
  <%= submit_tag 'Post', id: 'new_post_btn', class: "btn btn-search btn-block", disabled: true %>

<% end %>
